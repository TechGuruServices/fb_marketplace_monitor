# ============================================================
# Facebook Marketplace Monitor Configuration
# Copy this file to .env and fill in your values
# ============================================================

# ------------------------------------------------------------
# TELEGRAM CONFIGURATION (Recommended)
# ------------------------------------------------------------
# Create a bot via @BotFather on Telegram to get your token
# Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=8302493445:AAGA4VZfgq9WvSAEiyyJ_jzHkZ10uSmtmIk
TELEGRAM_CHAT_ID=82584440957

# ------------------------------------------------------------
# WHATSAPP CONFIGURATION (Optional - requires Twilio account)
# ------------------------------------------------------------
# Sign up at https://www.twilio.com
# Enable WhatsApp sandbox in Twilio Console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+1234567890

# ------------------------------------------------------------
# SEARCH CONFIGURATION
# ------------------------------------------------------------
# Comma-separated list of keywords to search for
SEARCH_KEYWORDS=AUTOMOTIVE / VEHICLES, ELECTRONICS, FURNITURE, CLOTHING, TOOLS / POWER TOOLS, TOOL SETS, CAR PARTS, INDUSTRIAL EQUIPMENT, WANTED TO BUY, FAST SALE, BRAND NEW / LIKE NEW, BUILDING MATERIALS,

# Optional: Location (city name)
SEARCH_LOCATION=MONTANA, USA / MISSOULA, MONTANA, USA / KALISPELL, MONTANA, USA / BILLINGS, MONTANA, USA /  

# Search radius in miles
SEARCH_RADIUS_MILES=301

# Price filters (optional, leave empty for no filter)
SEARCH_MIN_PRICE=
SEARCH_MAX_PRICE=500

# Category filter (optional)
# Options: vehicles, electronics, furniture, clothing, tools, etc.
SEARCH_CATEGORY=AUTOMOTIVE / VEHICLES, ELECTRONICS, FURNITURE, CLOTHING, TOOLS / POWER TOOLS/SETS, CAR PARTS, INDUSTRIAL EQUIPMENT / FARM EQUIPMENT

# ------------------------------------------------------------
# MONITOR CONFIGURATION
# ------------------------------------------------------------
# How often to check for new listings (in seconds)
CHECK_INTERVAL_SECONDS=120

# Run browser in headless mode (true/false)
HEADLESS_BROWSER=true

# Maximum listings to fetch per check
MAX_LISTINGS_PER_CHECK=10

# Maximum retries on error
MAX_RETRIES=3

# Delay between retries (seconds)
RETRY_DELAY_SECONDS=60

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# File to store seen listings
STORAGE_FILE=seen_listings.json

# Remove listings older than this many days
CLEANUP_DAYS=never
